{
  "name": "<%= appname %>",
  "version": "0.1.0",
  "description": "My Angular2-TypeScript App",
  "keywords": [
    "angular2",<% if (systemjs) { %>
    "systemjs",<% } %>
    "typescript"<% if (webpack) { %>,
    "webpack"<% } %>
  ],
  "scripts": {
    "postinstall": "./node_modules/.bin/typings install"<% if (systemjs) { %>,
    "start": "tsc && concurrently \"npm run tsc:w\" \"npm run lite\" ",
    "lite": "lite-server",
    "tsc": "tsc",
    "tsc:w": "tsc -w"<% } if (webpack) { %>,
    "start": "./node_modules/.bin/webpack-dev-server --inline --colors --progress --port 3000",
    "build": "./node_modules/.bin/rimraf dist && concurrently \"./node_modules/.bin/webpack --config config/webpack.prod.js --progress --colors --profile --bail\" "<% } %>
  },
  "dependencies": {
    "rxjs": "5.0.0-beta.6"
  },
  "devDependencies": {
    "codelyzer": "0.0.19",
    "concurrently": "^2.0.0",<% if (systemjs) { %>
    "systemjs": "0.19.27",
    "lite-server": "^2.2.0",<% } %>
    "tslint": "^3.10.2",
    "typescript": "^1.8.10",
    "typings": "^1.3.0" <% if (webpack) { %>,
    "css-loader": "^0.23.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.8.5",
    "html-loader": "^0.4.3",
    "html-webpack-plugin": "^2.15.0",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.5.2",
    "style-loader": "^0.13.1",
    "ts-loader": "^0.8.1",
    "webpack": "^1.13.1",
    "webpack-dev-server": "^1.14.1",
    "webpack-merge": "^0.14.0"<% } %>
  }
}
